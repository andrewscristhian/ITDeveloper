@model Curso.ITDeveloper.Domain.Entities.EstadoPaciente

@{
    ViewData["Title"] = "Deleção de Estado do Paciente";
}

<div class="panel panel-info panel-controls">
    <div class="panel panel-heading">
        <h3>Deseja realmente apagar o registro?</h3>
    </div>

    <div class="panel panel-body">

        <div>
            <h4>Estado Paciente</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-controller="EstadoPaciente" asp-action="Index" class="btn btn-info">Voltar a Lista</a>
            </form>
        </div>
    </div>
</div>
